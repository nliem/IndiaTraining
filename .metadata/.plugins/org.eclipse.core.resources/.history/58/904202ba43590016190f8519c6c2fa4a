package utils;

import java.io.File;
import java.io.FileInputStream;
import java.sql.*;
import java.util.Properties;

public class MySQLConnection {
	
	private static Connection getMyOracleConnection(){
		Connection con = null;
		
		try{
			Properties props = new Properties();
			
			FileInputStream inStream = new FileInputStream(new File("DbConnection.properties"));
		
			props.load(inStream);
			
			Class.forName(props.getProperty("db.driverClass"));
			
			con = DriverManager.getConnection(props.getProperty("db.URL"), props.getProperty("db.username"), props.getProperty("db.password"));
		}
		catch(Exception e){
			System.out.println(e.getMessage());
			e.printStackTrace();
		}
		
		return con;
	}

}
